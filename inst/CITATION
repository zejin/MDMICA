citHeader("To cite MDMICA in publications use:")

citEntry(entry = "Manual",
  title        = "MDMICA: Independent Component Analysis via Mutual Dependence Measures",
  author       = personList(as.person("Ze Jin"),
                   as.person("David S. Matteson")),
  year         = "2018",
  note         = "R package version 1.0.",

  textVersion  =
  paste("Ze Jin and David S. Matteson (2018).",
        "MDMICA: Independent Component Analysis via Mutual Dependence Measures.",
        "R package version 1.0.")
)